@model CMS.Data.Contact
@{
    ViewBag.Title = "İletişim Bilgileri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> İletişim Bilgileri</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/Admin/Index">Dashboard</a></li>
            <li><i class="fa fa-laptop"></i>İletişim Bilgileri</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                İletişim Bilgileri
            </header>
            <div class="panel-body">
                <div class="form">
                    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Contact/Save">
                        @Html.AntiForgeryToken()
                        <input type="hidden" class="form-control" name="id" value="@Model.id" required>
                        <input type="hidden" class="form-control" name="isactive" value="True" required>
                        <input type="hidden" class="form-control" name="createddate" value="@DateTime.Now" required>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Adres <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <textarea name="address" class="ckeditor">@Model.address</textarea>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Telefon <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="phone" name="phone" type="tel" pattern="[0-9]{10}" value="@Model.phone" required />
                                <span class="help-block">Örn: 5555555555</span>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Fax <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="fax" name="fax" type="tel" pattern="[0-9]{10}" value="@Model.fax" required />
                                <span class="help-block">Örn: 5555555555</span>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">E-posta <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="email" name="email" type="email" value="@Model.email" required />
                                <span class="help-block">Örn: email@email.com</span>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">WhatsApp</label>
                            <div class="col-lg-10">
                                <input class="form-control" id="whatsapp" name="whatsapp" type="tel" value="@Model.whatsapp" pattern="[0-9]{10}" />
                                <span class="help-block">Örn: 5555555555</span>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Facebook</label>
                            <div class="col-lg-10">
                                <input class="form-control" id="facebook" name="facebook" type="text" value="@Model.facebook" />
                                <span class="help-block">Örn: facebook.com/<strong>basiccms</strong></span>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Twitter</label>
                            <div class="col-lg-10">
                                <input class="form-control" id="twitter" name="twitter" type="text" value="@Model.twitter" />
                                <span class="help-block">Örn: twitter.com/<strong>basiccms</strong></span>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Instagram</label>
                            <div class="col-lg-10">
                                <input class="form-control" id="instagram" name="instagram" type="text" value="@Model.instagram" />
                                <span class="help-block">Örn: instagram.com/<strong>basiccms</strong></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-primary" type="submit">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </section>
    </div>
</div>
