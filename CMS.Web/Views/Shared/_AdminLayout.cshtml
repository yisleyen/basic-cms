@{
    if (Session.Count == 0)
    {
        Response.Redirect("/Admin/Login/");
    }

    string authority = (string)(Session["Authority"]);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BasicCMS</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/Admin/css/bootstrap-theme.css" rel="stylesheet">
    <link href="~/Content/Admin/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/assets/fullcalendar/fullcalendar/bootstrap-fullcalendar.css" rel="stylesheet" />
    <link href="~/Content/Admin/assets/fullcalendar/fullcalendar/fullcalendar.css" rel="stylesheet" />
    <link href="~/Content/Admin/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/Content/Admin/css/owl.carousel.css" type="text/css">
    <link href="~/Content/Admin/css/jquery-jvectormap-1.2.2.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Admin/css/fullcalendar.css">
    <link href="~/Content/Admin/css/widgets.css" rel="stylesheet">
    <link href="~/Content/Admin/css/style.css" rel="stylesheet">
    <link href="~/Content/Admin/css/style-responsive.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/xcharts.min.css" rel=" stylesheet">
    <link href="~/Content/Admin/css/jquery-ui-1.10.4.min.css" rel="stylesheet">
    <link href="~/Content/ckeditor/contents.css" rel="stylesheet" />
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        CKEDITOR.replace("editor")
    </script>
</head>

<body>
    <!-- container section start -->
    <section id="container" class="">
        <header class="header dark-bg">
            <div class="toggle-nav">
                <div class="icon-reorder tooltips" data-original-title="Toggle Navigation" data-placement="bottom"><i class="icon_menu"></i></div>
            </div>

            <!--logo start-->
            <a href="/Dashboard/Index" class="logo">BasicCMS <span class="lite">Admin</span></a>
            <!--logo end-->

            <div class="nav search-row" id="top_menu">
                <!--  search form start -->
                <ul class="nav top-menu">
                    <li>
                        <form class="navbar-form">
                            <input class="form-control" placeholder="Search" type="text">
                        </form>
                    </li>
                </ul>
                <!--  search form end -->
            </div>

            <div class="top-nav notification-row">
                <!-- notificatoin dropdown start-->
                <ul class="nav pull-right top-menu">

                    <!-- alert notification start-->
                    <li id="alert_notificatoin_bar" class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <i class="icon-bell-l"></i>
                            <span class="badge bg-important">@Session["CommentsCount"]</span>
                        </a>
                        <ul class="dropdown-menu extended notification">
                            <div class="notify-arrow notify-arrow-blue"></div>
                            <li>
                                <p class="blue">Bekleyen @Session["CommentsCount"] yorum bulunmaktadır</p>
                            </li>
                            <li>
                                <a href="/Comments/Index/">Yorumları Onayla</a>
                            </li>
                        </ul>
                    </li>
                    <!-- alert notification end-->
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="profile-ava">
                                <img alt="" src="img/avatar1_small.jpg">
                            </span>
                            <span class="username">@Session["NameLastName"]</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <div class="log-arrow-up"></div>
                            <li class="eborder-top">
                                <a href="/Admin/Edit/@Session["Id"]"><i class="icon_profile"></i> Profil</a>
                            </li>
                            <li>
                                <a href="/Logout/Index"><i class="icon_key_alt"></i> Çıkış</a>
                            </li>
                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!-- notificatoin dropdown end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu">
                    <li class="active">
                        <a class="" href="/Dashboard/Index">
                            <i class="icon_house_alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    @if (authority == "admin")
                    {
                        <li>
                            <a class="" href="/SiteInfos/Index">
                                <i class="icon_genius"></i>
                                <span>Site Bilgileri</span>
                            </a>
                        </li>
                        <li class="sub-menu">
                            <a class="" href="/AboutUs/Index">
                                <i class="icon_document_alt"></i>
                                <span>Hakkımızda</span>
                            </a>
                        </li>
                        <li class="sub-menu">
                            <a class="" href="/Contacts/Index">
                                <i class="icon_desktop"></i>
                                <span>İletişim Bilgileri</span>
                            </a>
                        </li>
                    }
                    <li class="sub-menu">
                        <a href="javascript:;" class="">
                            <i class="icon_table"></i>
                            <span>Hizmetlerimiz</span>
                            <span class="menu-arrow arrow_carrot-right"></span>
                        </a>
                        <ul class="sub">
                            <li><a class="" href="/OurServices/Index">Hizmetler</a></li>
                            <li><a class="" href="/OurServices/Edit">Hizmet Ekle</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;" class="">
                            <i class="fa fa-sliders"></i>
                            <span>Bannerlar</span>
                            <span class="menu-arrow arrow_carrot-right"></span>
                        </a>
                        <ul class="sub">
                            <li><a class="" href="/Slides/Index">Bannerlar</a></li>
                            <li><a class="" href="/Slides/Edit">Banner Ekle</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;" class="">
                            <i class="icon_documents_alt"></i>
                            <span>Bloglar</span>
                            <span class="menu-arrow arrow_carrot-right"></span>
                        </a>
                        <ul class="sub">
                            <li><a class="" href="/Blogs/Index"><span>Bloglar</span></a></li>
                            <li><a class="" href="/Blogs/Edit">Blog Ekle</a></li>
                            <li><a class="" href="/Comments/Index"><span>Yorumlar</span></a></li>
                            <li><a class="" href="/Categories/Index">Kategoriler</a></li>
                            <li><a class="" href="/Categories/Edit"><span>Kategori Ekle</span></a></li>
                        </ul>
                    </li>
                    @if (authority == "admin")
                    {
                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                <i class="fa fa-user"></i>
                                <span>Kullanıcılar</span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>
                            <ul class="sub">
                                <li><a class="" href="/Admin/Index"><span>Kullanıcılar</span></a></li>
                                <li><a class="" href="/Admin/Edit">Kullanıcı Ekle</a></li>
                            </ul>
                        </li>
                    }
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                @RenderBody()
            </section>
        </section>
        <!--main content end-->
    </section>
    <!-- container section start -->
    <!-- javascripts -->
    <script src="~/Content/Admin/js/jquery.js"></script>
    <script src="~/Content/Admin/js/jquery-ui-1.10.4.min.js"></script>
    <script src="~/Content/Admin/js/jquery-1.8.3.min.js"></script>
    <script type="text/javascript" src="~/Content/Admin/js/jquery-ui-1.9.2.custom.min.js"></script>
    <!-- bootstrap -->
    <script src="~/Content/Admin/js/bootstrap.min.js"></script>
    <!-- nice scroll -->
    <script src="~/Content/Admin/js/jquery.scrollTo.min.js"></script>
    <script src="~/Content/Admin/js/jquery.nicescroll.js" type="text/javascript"></script>
    <!-- charts scripts -->
    <script src="~/Content/Admin/assets/jquery-knob/js/jquery.knob.js"></script>
    <script src="~/Content/Admin/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="~/Content/Admin/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>
    <script src="~/Content/Admin/js/owl.carousel.js"></script>
    <!-- jQuery full calendar -->
    <script src="~/Content/Admin/js/fullcalendar.min.js"></script>
    <!-- Full Google Calendar - Calendar -->
    <script src="~/Content/Admin/assets/fullcalendar/fullcalendar/fullcalendar.js"></script>
    <!--script for this page only-->
    <script src="~/Content/Admin/js/calendar-custom.js"></script>
    <script src="~/Content/Admin/js/jquery.rateit.min.js"></script>
    <!-- custom select -->
    <script src="~/Content/Admin/js/jquery.customSelect.min.js"></script>
    <script src="~/Content/Admin/assets/chart-master/Chart.js"></script>
    <!--custome script for all page-->
    <script src="~/Content/Admin/js/scripts.js"></script>
    <!-- custom script for this page-->
    <script src="~/Content/Admin/js/sparkline-chart.js"></script>
    <script src="~/Content/Admin/js/easy-pie-chart.js"></script>
    <script src="~/Content/Admin/js/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/Content/Admin/js/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/Content/Admin/js/xcharts.min.js"></script>
    <script src="~/Content/Admin/js/jquery.autosize.min.js"></script>
    <script src="~/Content/Admin/js/jquery.placeholder.min.js"></script>
    <script src="~/Content/Admin/js/gdp-data.js"></script>
    <script src="~/Content/Admin/js/morris.min.js"></script>
    <script src="~/Content/Admin/js/sparklines.js"></script>
    <script src="~/Content/Admin/js/charts.js"></script>
    <script src="~/Content/Admin/js/jquery.slimscroll.min.js"></script>
    <script>
        //knob
        $(function () {
            $(".knob").knob({
                'draw': function () {
                    $(this.i).val(this.cv + '%')
                }
            })
        });

        //carousel
        $(document).ready(function () {
            $("#owl-slider").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true

            });
        });

        //custom select box

        $(function () {
            $('select.styled').customSelect();
        });

        /* ---------- Map ---------- */
        $(function () {
            $('#map').vectorMap({
                map: 'world_mill_en',
                series: {
                    regions: [{
                        values: gdpData,
                        scale: ['#000', '#000'],
                        normalizeFunction: 'polynomial'
                    }]
                },
                backgroundColor: '#eef3f7',
                onLabelShow: function (e, el, code) {
                    el.html(el.html() + ' (GDP - ' + gdpData[code] + ')');
                }
            });
        });
    </script>

</body>

</html>