
@{
    ViewBag.Title = "Kullanıcı Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="icon_documents_alt"></i> Kullanıcı Güncelle</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/Dashboard/Index">Dashboard</a></li>
            <li><i class="fa fa-user"></i><a href="/Admin/Index">Kullanıcılar</a></li>
            <li><i class="fa fa-user"></i>Kullanıcı Güncelle</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Kullanıcı Güncelle
            </header>
            <div class="panel-body">
                <div class="form">
                    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Admin/Save">
                        @Html.AntiForgeryToken()
                        <input type="hidden" class="form-control" name="id" value="@Model.id" required>
                        <input type="hidden" class="form-control" name="isactive" value="True" required>
                        <input type="hidden" class="form-control" name="createddate" value="@DateTime.Now" required>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Adı <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="name" name="name" minlength="5" type="text" value="@Model.name" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Soyadı <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="surname" name="surname" minlength="5" type="text" value="@Model.surname" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">E-posta adresi <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="email" name="email" minlength="5" type="email" value="@Model.email" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Şifre <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="password" name="password" minlength="5" type="password" value="@Model.password" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Yetki <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="authority" name="authority" minlength="5" type="text" value="@Model.authority" required />
                                <span class="help-block"><strong>admin</strong> veya <strong>editor</strong> olarak giriş yapınız</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-primary" type="submit">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </section>
    </div>
</div>