@model Tuple<CMS.Data.Contact, CMS.Data.SiteInfos>
<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Ulaşım</h5>
                    <address>
                        @Html.Raw(Model.Item1.address)
                    </address>
                    <p>
                        <i class="icon-phone"></i> @Model.Item1.phone - @Model.Item1.fax <br>
                        <i class="icon-envelope-alt"></i> @Model.Item1.email
                    </p>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Menü</h5>
                    <ul class="link-list">
                        <li><a href="">Ana Sayfa</a></li>
                        <li><a href="/about-us">Hakkımızda</a></li>
                        <li><a href="/our-services">Hizmetlerimiz</a></li>
                        <li><a href="/blog">Blog</a></li>
                        <li><a href="/contact">İletişim</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Son Yazılar</h5>
                    <ul class="link-list">
                        @foreach (var item in CMS.Data.Db.Func.GetBlogs())
                        {
                            <li><a href="/Home/BlogDetails/@item.id">@item.title</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Hizmetlerimiz</h5>
                    <div class="flickr_badge">
                        @foreach (var item in CMS.Data.Db.Func.GetServices())
                        {
                            <img src="~/Uploads/@item.imageUrl" alt="@item.title" />
                        }
                    </div>
                    <div class="clear">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="sub-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="copyright">
                        <p>&copy; @Model.Item2.title. All right reserved.</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ul class="social-network">
                        <li><a href="https://www.facebook.com/@Model.Item1.facebook" data-placement="top" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="https://www.twitter.com/@Model.Item1.twitter" data-placement="top" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="https://www.instagram.com/@Model.Item1.instagram" data-placement="top" title="Instagram"><i class="fa fa-instagram"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>
