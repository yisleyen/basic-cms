@model CMS.Data.Categories
@{
    ViewBag.Title = "Kategori Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="icon_documents_alt"></i> Kategori Güncelle</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/Admin/Index">Dashboard</a></li>
            <li><i class="icon_documents_alt"></i><a href="/Categories/Index">Kategoriler</a></li>
            <li><i class="icon_documents_alt"></i>Kategori Güncelle</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Hizmet Güncelle
            </header>
            <div class="panel-body">
                <div class="form">
                    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Categories/Save">
                        @Html.AntiForgeryToken()
                        <input type="hidden" class="form-control" name="id" value="@Model.id" required>
                        <input type="hidden" class="form-control" name="isactive" value="True" required>
                        <input type="hidden" class="form-control" name="createddate" value="@DateTime.Now" required>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Adı <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="title" name="title" minlength="5" type="text" value="@Model.title" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Açıklama <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="description" name="description" minlength="5" type="text" value="@Model.description" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-primary" type="submit">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </section>
    </div>
</div>